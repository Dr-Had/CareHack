<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="com.example.hadi.hosp.MainActivity">

    <TextView
        android:text="BOOK APPOINMENT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="#FF000000"
        android:textStyle="normal|bold"
        android:background="#f7f749"
        android:layout_alignParentTop="true"
        android:id="@+id/textView8" />

    <TextView
        android:text="Patient's Name : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:layout_toStartOf="@+id/textView2"
        android:layout_below="@+id/textView8"
        android:textStyle="normal|bold" />

    <TextView
        android:text="xxxxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_marginEnd="133dp"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="PLEASE SELECT YOUR ILLNESS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textView3"
        android:padding="5dp"
        android:background="@drawable/roundedback"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/background_light" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/generalm"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:id="@+id/genrealmed" />

        <TextView
            android:text="GENERAL MEDICINE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:id="@+id/textView5"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ear"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/ent" />

        <TextView
            android:text="ENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textView6"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dentist"
            android:scaleType="fitCenter"
            android:background="#ffffff"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/dentist" />

        <TextView
            android:text="DENTIST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/textView7"
            android:textStyle="normal|bold"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>




</RelativeLayout>
